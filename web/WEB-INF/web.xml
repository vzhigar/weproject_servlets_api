<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <context-param>
        <param-name>javax.servlet.jsp.jstl.fmt.request.charset</param-name>
        <param-value>UTF-8</param-value>
    </context-param>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>by.gsu.epamlab.servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>by.gsu.epamlab.servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>register</servlet-name>
        <servlet-class>by.gsu.epamlab.servlets.RegistrationServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>register</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>main</servlet-name>
        <servlet-class>by.gsu.epamlab.servlets.MainServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>main</servlet-name>
        <url-pattern>/main</url-pattern>
        <url-pattern>/today</url-pattern>
        <url-pattern>/tomorrow</url-pattern>
        <url-pattern>/someday</url-pattern>
        <url-pattern>/fixed</url-pattern>
        <url-pattern>/recycle</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>actions</servlet-name>
        <servlet-class>by.gsu.epamlab.servlets.ActionsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>actions</servlet-name>
        <url-pattern>/actions</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>addTask</servlet-name>
        <servlet-class>by.gsu.epamlab.servlets.AddTaskServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addTask</servlet-name>
        <url-pattern>/addTask</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>save</servlet-name>
        <servlet-class>by.gsu.epamlab.servlets.SaveTaskServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>save</servlet-name>
        <url-pattern>/save</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>upload</servlet-name>
        <servlet-class>by.gsu.epamlab.servlets.UploadFileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>upload</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>download</servlet-name>
        <servlet-class>by.gsu.epamlab.servlets.DownloadFileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>download</servlet-name>
        <url-pattern>/download</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>loginFilter</filter-name>
        <filter-class>by.gsu.epamlab.servlets.LoginFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>loginFilter</filter-name>
        <url-pattern>/today</url-pattern>
        <url-pattern>/tomorrow</url-pattern>
        <url-pattern>/someday</url-pattern>
        <url-pattern>/fixed</url-pattern>
        <url-pattern>/recycle</url-pattern>
        <url-pattern>/save</url-pattern>
        <url-pattern>/addTask</url-pattern>
        <url-pattern>/main</url-pattern>
        <url-pattern>/actions</url-pattern>
        <url-pattern>/upload</url-pattern>
        <url-pattern>/download</url-pattern>
    </filter-mapping>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>